<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_notice_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_message" />

    <TextView
        android:id="@+id/tv_message_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_notice_img"
        android:text="课堂消息"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_notice_img"
        android:text="尊敬的用户尊敬的用户尊敬的用户尊敬的用户尊 敬…立即查看>>"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_notice_img"
        android:text="两天前"
        android:textSize="12sp" />
    
    <View
        android:id="@+id/view_red_point"
        android:layout_width="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="10dp"
        android:background="@drawable/shape_red_point_corners"/>


</RelativeLayout>
