<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="敏捷项目管理"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="8.8折"
                    android:textColor="@color/text_orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="¥2399(含教辅资料)"
                    android:textColor="@color/text_orange"
                    android:textSize="12sp" />


                <RatingBar
                    android:id="@+id/rb_introduce"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    android:progress="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/rb_introduce"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@id/rb_introduce"
                    android:layout_toRightOf="@id/rb_introduce"
                    android:text="11959人在学"
                    android:textColor="@color/hint_gray"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教辅资料"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                
                <com.runen.wnhz.runen.widget.NoScrollGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="课程介绍"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="本课程是一套针对于互联网开发的项目管理方法论。系统的全面的项目管理思想。课程深入浅出的阐明了瀑布式开发与敏捷开发方式的渊源与异同。相信学完本课程一定会让你有所收货。"
                    android:textColor="#666666"
                    android:textSize="14sp" />
                
                
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:text="适用群体"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="产品经理，项目经理，pmo办公室，敏捷教练等项目管理和有志于项目管理的人群。"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>