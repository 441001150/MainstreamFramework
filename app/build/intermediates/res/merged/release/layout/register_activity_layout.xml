<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#8EE1BA"
        android:padding="2dp"
        android:text="跳过"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:src="@mipmap/icon_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_white_corners"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_grey_corners"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="10dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:textColorHint="#999999"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_grey_corners"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_input_vcode"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_vcode"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10dp"
                android:textColor="@color/text_black"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_v_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:text="获取验证码"
                android:textColor="@color/text_green"
                android:textSize="14sp" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_grey_corners"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:hint="请输入六位以上字符密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/iv_agreement"
                android:layout_marginTop="22dp"
                android:drawablePadding="5dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_unselected"
                />

            <TextView
                android:layout_toRightOf="@+id/iv_agreement"
                android:id="@+id/tv_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:drawablePadding="5dp"
                android:text="注册即代表同意《润恩》APP服务协议"
                android:textColor="#999999"
                android:textSize="14sp" />

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bg_button"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>