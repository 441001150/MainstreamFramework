<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/bg_achievement"
        android:padding="10dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1/20"
        android:textColor="@color/text_white"
        android:textSize="18sp" />
        
    <TextView
        android:id="@+id/tv_clear"
        android:layout_alignParentRight="true"
        android:text="移除"
        android:textSize="17sp"
        android:textColor="@color/text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    </RelativeLayout>
    
    <include
        android:id="@+id/include_errorback"
        layout="@layout/page_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>
    
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ry_single_election"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        
        <TextView
            android:id="@+id/tv_error_type"
            android:gravity="center"
            android:layout_width="53dp"
            android:layout_height="23dp"
            android:background="@color/hint_gray"
            android:text="单选"
            android:textColor="@color/white"/>
        
        <TextView
            android:layout_toRightOf="@+id/tv_error_type"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/tv_error_quest"
            android:text="敏捷开发起源于哪个国家"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        
        <View
            android:id="@+id/view4"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_error_type"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB"></View>
        
        <ImageView
            android:id="@+id/imageA"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/view4"
            android:src="@mipmap/icon_rb_unsele"
            android:layout_width="23dp"
            android:layout_height="23dp"
            />
        
        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/view4"
            android:layout_toRightOf="@+id/imageA"
            android:id="@+id/tvA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_error_Black"
            android:text="美国"/>

        <ImageView
            android:id="@+id/imageB"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/imageA"
            android:src="@mipmap/icon_rb_unsele"
            android:layout_width="23dp"
            android:layout_height="23dp"
            />

        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageA"
            android:layout_toRightOf="@+id/imageB"
            android:id="@+id/tvB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_error_Black"
            android:text="新加坡"/>

        <ImageView
            android:id="@+id/imageC"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/imageB"
            android:src="@mipmap/icon_rb_unsele"
            android:layout_width="23dp"
            android:layout_height="23dp"
            />

        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageB"
            android:layout_toRightOf="@+id/imageC"
            android:id="@+id/tvC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_error_Black"
            android:text="新加坡"/>

        <ImageView
            android:id="@+id/imageD"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/imageC"
            android:src="@mipmap/icon_rb_unsele"
            android:layout_width="23dp"
            android:layout_height="23dp"
            />

        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageC"
            android:layout_toRightOf="@+id/imageD"
            android:id="@+id/tvD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_error_Black"
            android:text="中国"/>
        
        
        
        
        
        
    </RelativeLayout>
    
    
    



</LinearLayout>